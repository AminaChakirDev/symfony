{% extends 'base.html.twig' %}
{% block title %}{{ episode.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">Episode {{ episode.number }} of {{ episode.title }}</h1>
            <p>{{ episode.synopsis }}</p>
        </div>
    </div>
    <a href="{{ path('wild_index') }}">Retour à l'accueil</a>
    <br>
    <a href="{{ path('wild_show_season', { 'id': season.number }) }}">Retour à la saison {{ season.number }}</a>
    <br>
    <a href="{{ path('wild_show_program', { 'programName': program.title }) }}">Retour à la fiche série {{ program.title }}</a>

{% endblock %}


