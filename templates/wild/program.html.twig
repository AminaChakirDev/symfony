{% extends 'base.html.twig' %}
{% block title %}{{ program.title }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <ul>{% for season in seasons %}
                <li><a href="{{ path('wild_show_season', { 'id': season.id }) }}">Season {{ season.number }}</a><br>{{ season.description }}</li>
            {% endfor %}
            </ul>
        </div>
    </div>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}


